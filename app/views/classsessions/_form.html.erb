<%= bootstrap_form_with(model: @session, local: true) do |form| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session.errors.count, "error") %> prohibited this classgroup from being saved:</h2>

      <ul>
        <% @session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.text_field :topic, label: "Topic of the Session"%>
    </div>
    <div class="field">
      <%= form.datetime_field(:end_time, label: "Approximate Finish Time") %>
    </div>
    <div class="field">
      <%= form.hidden_field('classgroup_id', :value => @classgroup) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Start Session", class: "btn btn-primary"%>
  </div>
<% end %>
