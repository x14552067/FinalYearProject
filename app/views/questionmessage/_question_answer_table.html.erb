<table class="table qanda-list-table">
  <thead>
  <tr>
    <th scope="col">Question</th>
    <th scope="col">Answer</th>
  </tr>
  </thead>
  <tbody>
  <% @questions.each do |question| %>
    <% if question.answermessage.nil? %>

    <% else %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.answermessage.content %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>