<div class="row class-heading classistant-body classgroup-body">
  <div class="col-md-12">
    <div class="col-md-6 class-top-row">
      <div class="class-heading">
        <div class="class-details">
          <h2><%= @classgroup.class_name %> - Overview</h2>
          <p><strong>Course:</strong> <%= @classgroup.course_name %></p>
          <p><strong>Lecturer:</strong> <%= @classgroup.lecturer.full_name %></p>
          <p><strong>Enrollment Key:</strong> <%= @classgroup.enrollment_key %></p>
          <p class="class-description">"<%= @classgroup.class_description %>"</p>
        </div>
      </div>
    </div>
    <div class="col-md-6 class-top-row">
      <div class="class-heading">
        <div class="class-details">
          <div class="class-image-container text-center">
            <%= render 'class_image' %>
            <%= link_to 'Edit Class', edit_classgroup_path(@classgroup), class: "btn btn-primary class-crud-button"%>
            <%= link_to 'Delete Class', @classgroup, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger class-crud-button"%>
          </div>
        </div>
      </div>
    </div>
    <hr class="hr-dark">
  </div>
</div>
<div class="row classistant-body classgroup-body">
  <div class="col-md-12">
    <h2>List of Sessions</h2>
    <%= link_to "Start new Session", {:controller => "classsessions", :action => "new", :classgroup => @classgroup }, class: "btn btn-primary start-session-btn"%>
    <%= render 'classsessions/list' %>
  </div>
</div>
<div class="row classistant-body classgroup-body">
  <div class="col-md-12">
    <h2>List of Students</h2>
    <p>Number of Students Enrolled: <%= @student_count %></p>
    <%= render 'students/list' %>
  </div>
</div>
<div class="row classistant-body classgroup-body">
  <div class="col-md-12">
    <h2>Quizzes</h2>
    <p>Below is a list of Quizzes for this class</p>
    <%= link_to "Create a Quiz", {:controller => "quiz", :action => "new", :classgroup => @classgroup }, class: "btn btn-primary create-quiz-btn"%>
    <%= render 'quiz/list' %>
  </div>
</div>